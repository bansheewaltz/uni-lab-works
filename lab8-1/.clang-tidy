Checks: >
  cppcoreguidelines-*,
  clang-diagnostic-*,
  clang-analyzer-*,
  readability-*,
  portability-*,
  performance-*,
  modernize-*,
  bugprone-*,
  hicpp-*,
  misc-*,
  google-*,
WarningsAsErrors: true
HeaderFilterRegex: >
  "(src/headers).*\\.h$"
CheckOptions:
  - key: readability-identifier-length.IgnoredParameterNames
    value: ^[ijkabnv]$
