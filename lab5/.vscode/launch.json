{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch current file",
            "type": "lldb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}"
        },
        {
            "name": "(lldb) Launch project",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}/test",
            "preLaunchTask": "build debug version of the project"
        },
        {
            "name": "(lldb) Launch project encoding",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${workspaceFolderBasename}",
            "args": [
                "in.txt",
            ],
            "cwd": "${workspaceFolder}/test",
            "preLaunchTask": "build debug version of the project"
        },
        {
            "name": "(lldb) Launch project decoding",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/${workspaceFolderBasename}",
            "args": [
                "encoded.txt",
            ],
            "cwd": "${workspaceFolder}/test",
            "preLaunchTask": "build debug version of the project",
            "env": {
                "DEBUG": ""
            }
        }
    ]
}
